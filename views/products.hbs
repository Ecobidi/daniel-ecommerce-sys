  <div class="col-12 py-4">
    <div class="d-flex justify-content-between">
      <h2>Products</h2>
      <div>
        <a href="/products/new" class="btn btn-primary">Add New Product</a>
      </div>
    </div>
  </div>

  <div class="col-12 py-4">
    <form class="form-inline" method="POST" action="/products">
      <div class="form-group py-2">
        <input class="form-control" name="search">
        <button type="submit" class="btn btn-sm btn-primary">Search</button>
      </div>
    </form>
    <h4 class="mb-0 bg-info py-2 text-white text-center mt-4">List of Products</h4>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Image</th>
          <th>Product Name</th>
          <th>Category</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          {{#if this.image}}
          <td><img src="/uploads/products/{{this.image}}" class="mini-square-thumbnail" alt=""></td>
          {{/if}}
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.price}}</td>
          <td>{{this.quantity}}</td>
          <td>
            <div class="btn-group" role="group" aria-label="Button group">
              {{!-- <a href="" class="btn btn-info btn-sm"> <i class="fa fa-binoculars"></i> </a>
              <a href="/products/edit?_id={{this._id}}" class="btn btn-warning btn-sm"> <i class="fa fa-edit"></i> </a> --}}
              <a class="btn btn-danger btn-sm text-white" href="/products/remove/" + {{this._id}}>Remove</a>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>